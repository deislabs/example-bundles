{
    "name": "ansiblebase",
    "version": "0.1.0",
    "invocationImages": [
        {
        "imageType": "docker",
        "image": "cnab/ansiblebase:latest"
        }
    ],
    "parameters": {
        "azure_resource_group": {
            "defaultValue": "armbase-default",
            "type": "string",
            "destination": {
                "env": "AZURE_RESOURCE_GROUP"
            }
        },
        "azure_location": {
            "defaultValue": "useast",
            "type": "string",
            "destination": {
                "env": "AZURE_LOCATION"
            }
        },
        "check": {
            "defaultValue": false,
            "type": "boolean",
            "destination": {
                "env": "CHECK"
            }
        }
    },
    "credentials": {
        "tenant_id": {
            "env": "AZURE_TENANT"
        },
        "client_id": {
            "env": "AZURE_CLIENT_ID"
        },
        "client_secret": {
            "env": "AZURE_SECRET"
        },
        "subscription_id": {
            "env": "AZURE_SUBSCRIPTION_ID"
        }
    },
    "actions": {
        "status": {
            "modifies": false
        }
    }
}
